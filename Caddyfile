localhost {
  root /opt/zammad/public
  access_log /var/log/caddy/zammad.access.log
  error_log /var/log/caddy/zammad.error.log

  # Security headers
  header Security-headers {
    -Server
  }

  # Static files
  file_server {
    expires max
    root assets
    root robots.txt
    root humans.txt
    root favicon.ico
    root apple-touch-icon.png
  }

  # Legacy WebSocket proxy
  reverse_proxy /ws {
    to http://zammad-websocket
    header_up Upgrade {http_upgrade}
    header_up Connection "Upgrade"
    header_up CLIENT_IP {remote_addr}
    read_timeout 86400s
  }

  # Action Cable proxy
  reverse_proxy /cable {
    to http://zammad-railsserver
    header_up Upgrade {http_upgrade}
    header_up Connection "Upgrade"
    header_up CLIENT_IP {remote_addr}
    read_timeout 86400s
  }

  # Main app proxy
  reverse_proxy {
    to http://zammad-railsserver
    header_up CLIENT_IP {remote_addr}
    header_up X-Forwarded-User ""
    read_timeout 300s
  }

  # Gzip compression
  encode gzip
}